+    /* Verify the checksum */
+    {
+        uint8_t calculated_chk, received_chk;
+        proto_item *chk_item;
+
+        /* Checksum covers address byte + data bytes */
+        calculated_chk = calculate_mdb_checksum(tvb, offset - data_len - 1, data_len + 1);
+        received_chk = tvb_get_uint8(tvb, offset);
+
+        chk_item = proto_tree_add_item(tree, hf_mdb_chk, tvb, offset, 1, ENC_BIG_ENDIAN);
+
+        if (calculated_chk != received_chk) {
+            expert_add_info_format(pinfo, chk_item, &ei_mdb_bad_checksum,
