+static uint8_t calculate_mdb_checksum(tvbuff_t *tvb, int offset, int len)
+{
+    uint8_t sum = 0;
+    int i;
+
+    for (i = 0; i < len; i++) {
+        sum += tvb_get_uint8(tvb, offset + i);
+    }
+
+    return sum;
+}
